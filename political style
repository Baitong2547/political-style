        <!-- Success Screen -->
        <div id="successScreen" class="success-screen">
            <div class="success-content">
                <div class="success-icon">✅</div>
                <h2>ส่งคำตอบสำเร็จ!</h2>
                <p>ขอบคุณที่ทำแบบสอบถาม</p>
            </div>
